<% include ../partials/header %>


   <!-- <div style="text-align:center;"> -->

   <div class="container" style="width:50%;">
      <h1> Comment on
         <%= campground.name %>
      </h1>
      <form action="/campgrounds/<%= campground._id %>/comments" method="post">
         <div class="form-group">
            <input type="text" name="comment[author]" required="required" class="form-control" placeholder="author">
         </div>
         <div class="form-group">
            <input type="text" name="comment[text]" required="required" class="form-control" placeholder="text">
         </div>
         <div class="">
            <button type="submit" class="btn btn-primary" style="width:100%">Submit</button>
         </div>
      </form>
      <div class="form-group">
         <a href="/campgrounds">Back</a>
      </div>
   </div>
   
   <% include ../partials/footer %>
