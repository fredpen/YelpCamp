<% include ../partials/header %>

   <div style="text-align:center;">
      <h1>Create New Camp</h1>
      <div class="container" style="width:30%;">
         <form action="/campgrounds" method="post">
            <div class="form-group">
               <input type="text" name="name" required="required" class="form-control" id="exampleInputEmail1" placeholder="Name of the campground" autofocus>
            </div>
            <div class="form-group">
               <input type="text" name="image" required="required" class="form-control" id="exampleInputPassword1" placeholder="Image url">
            </div>
            <div class="form-group">
               <textarea style="margin-bottom:25px;" name="description" class="form-control" required="required" placeholder="Enter the description of your camp">
               </textarea
            </div>
            <button type="submit" class="btn btn-primary" style="width:100%">Submit</button>
         </form>

      </div>
      <a href="/campgrounds">Back</a>
   </div>
<% include ../partials/footer %>
